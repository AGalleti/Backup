from cgitb import text
from platform import python_branch
from sqlite3 import Row
import tkinter as tk
import clipboard
from colorama import Fore
import pyautogui
import webbrowser
import time


my_w = tk.Tk()
my_w.geometry("350x350")
my_w.title("atalho de suporte")
global data


e1 = tk.Text(my_w, font=20, height=4, width=28, bg='white')
e1.grid(row=0, column=1, columnspan=4)


def select_all():
    global data 
    pyautogui.hotkey('win','r')
    pyautogui.typewrite('temp')
    pyautogui.hotkey('enter')
    time.sleep(2)
    pyautogui.hotkey('ctrl', 'a')
    pyautogui.hotkey('DEL')


def memory_all ():
    global data
    pyautogui.hotkey('win','r')
    pyautogui.typewrite('cmd')
    pyautogui.hotkey('enter')
    time.sleep(4)
    pyautogui.typewrite('wmic memorychip get speed')
    pyautogui.hotkey('Enter')
    time.sleep(4)
    pyautogui.write('exit')
    pyautogui.hotkey('enter')

def temp_all():
    global data 
    pyautogui.hotkey('win','r')
    pyautogui.typewrite('%temp%')
    pyautogui.hotkey('enter')
    time.sleep(2)
    pyautogui.hotkey('ctrl', 'a')
    pyautogui.hotkey('DEL')
    pyautogui.hotkey('ALT', 'F4')






b1 = tk.Button(my_w, text='LImpar cache', command=lambda: select_all(),
               font=20, bg='lightyellow')
b1.grid(row=1, column=1, padx=2, pady=5)

b2 = tk.Button(my_w, text='memoria', command=lambda: memory_all(),
               font=20, bg='green')
b2.grid(row=1, column=2, padx=2, pady=5)

b1 = tk.Button(my_w, text='LImpar cache', command=lambda: temp_all(),
               font=20, bg='red')
b1.grid(row=1, column=3, padx=2, pady=5)



my_w.mainloop()
